@model UC_13_Henrique_Webssite.Models.Imovel

@{
    ViewData["Title"] = "Editar Imóvel";
}

<h1>Editar Imóvel</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />

            <!-- Endereço -->
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <!-- Cidade -->
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- CEP -->
            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <!-- Área -->
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <!-- Imagem do imóvel -->
            <div class="form-group">
                <label asp-for="ImagemUrlimoveis" class="control-label">URL da Imagem do Imóvel</label>
                <input asp-for="ImagemUrlimoveis" class="form-control" placeholder="https://exemplo.com/imovel.jpg" />
                <span asp-validation-for="ImagemUrlimoveis" class="text-danger"></span>

                @if (!string.IsNullOrEmpty(Model.ImagemUrlimoveis))
                {
                    <p>Imagem atual do imóvel:</p>
                    <img src="@Model.ImagemUrlimoveis" alt="Imagem do imóvel" style="width: 200px;" />
                }
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
