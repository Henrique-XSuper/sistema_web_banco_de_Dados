@model UC_13_Henrique_Webssite.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<h2>Criar Produto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FornecedorId" class="control-label"></label>
        <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagemUrl" class="control-label">URL da Imagem</label>
        <input asp-for="ImagemUrl" class="form-control" placeholder="https://exemplo.com/imagem.jpg" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
